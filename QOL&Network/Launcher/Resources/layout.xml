<?xml version="1.0" encoding="UTF-8"?>
<Skin>
    <Window width="640" height="360" 
            background="launcher_bg.bmp" 
            title="Игровой лаунчер"/>
    
    <!-- Элементы главного окна -->
    <!-- Первый ряд кнопок: ИГРАТЬ, БЕНЧМАРК, ПОДЕЛИТЬСЯ ЛОГОМ -->
    <Control name="play_btn" type="button" id="101" x="20" y="250" width="180" height="40" text="ИГРАТЬ"/>
    <Control name="bench_btn" type="button" id="102" x="230" y="250" width="180" height="40" text="БЕНЧМАРК"/>
    <Control name="log_btn" type="button" id="103" x="440" y="250" width="180" height="40" text="ПОДЕЛИТЬСЯ ЛОГОМ"/>
    
    <!-- Второй ряд кнопок: ОБНОВИТЬ ИГРУ и ОБРАТНАЯ СВЯЗЬ -->
    <!-- Обновление: слева, ширина 290 -->
    <Control name="update_btn" type="button" id="120" x="20" y="300" width="290" height="40" text="ОБНОВИТЬ ИГРУ"/>
    <!-- Обратная связь: справа, ширина 290 -->
    <Control name="feedback_btn" type="button" id="104" x="330" y="300" width="290" height="40" text="ОБРАТНАЯ СВЯЗЬ"/>
    
    <!-- Кнопка закрытия (в правом верхнем углу) -->
    <Control name="close_btn" type="button" id="107" x="590" y="10" width="30" height="30" text="✕"/>
    
    <!-- Окно предупреждения для отзыва (показывается первым) -->
    <FeedbackWarningWindow name="feedback_warning_window" width="480" height="280" title="Перед тем как оставить отзыв">
        <Control name="warning_label" type="label" id="111" x="20" y="20" width="440" height="180" 
                text="Спасибо, что хотите поделиться мнением!&#xA;&#xA;Ваш отзыв поможет нам стать лучше. Для максимальной пользы рекомендуем:&#xA;&#xA;• Писать конкретно о вашем опыте игры&#xA;• Указывать, что вам понравилось или не понравилось&#xA;• Предлагать идеи, если они есть&#xA;&#xA;Все отзывы обрабатываются анонимно и с уважением к вашей конфиденциальности."/>
        <Control name="yes_button" type="button" id="109" x="60" y="210" width="160" height="40" text="Продолжить"/>
        <Control name="no_button" type="button" id="110" x="260" y="210" width="160" height="40" text="Вернуться"/>
    </FeedbackWarningWindow>
    
    <!-- Окно обратной связи -->
    <FeedbackWindow name="feedback_window" width="480" height="320" title="Обратная связь">
        <Control name="feedback_label" type="label" id="115" x="20" y="10" width="440" height="40" 
                text="Опишите ваш опыт, идеи или вопросы:"/>
        <Control name="feedback_edit" type="edit" id="106" x="20" y="50" width="440" height="160" text=""/>
        <Control name="send_button" type="button" id="105" x="20" y="220" width="210" height="40" text="Отправить отзыв"/>
        <Control name="cancel_button" type="button" id="110" x="250" y="220" width="210" height="40" text="Отмена"/>
    </FeedbackWindow>
    
    <!-- Окно предупреждения для отправки лога -->
    <LogWarningWindow name="log_warning_window" width="520" height="320" title="Отправка диагностических данных">
        <Control name="log_warning_label" type="label" id="112" x="20" y="20" width="480" height="200" 
                text="Помогите нам улучшить стабильность игры!&#xA;&#xA;Мы можем запросить технические логи для диагностики проблем. Отправляемые данные включают:&#xA;&#xA;• Основные характеристики системы&#xA;• Настройки и параметры игры&#xA;• Технические журналы работы&#xA;&#xA;Все данные отправляются анонимно. Вы можете просмотреть содержимое лога перед отправкой в файле xray_engine.log."/>
        <Control name="log_yes_button" type="button" id="113" x="80" y="230" width="180" height="40" text="Поделиться логом"/>
        <Control name="log_no_button" type="button" id="114" x="280" y="230" width="180" height="40" text="Вернуться"/>
    </LogWarningWindow>
</Skin>
